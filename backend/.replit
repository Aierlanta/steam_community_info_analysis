# Replit 配置 - Steam 数据采集后端

# 运行配置
run = "python collector.py"

# 环境变量（在 Replit Secrets 中配置）
[env]
PYTHONIOENCODING = "utf-8"
PYTHONUNBUFFERED = "1"

# 入口点
entrypoint = "collector.py"

# Python 语言配置
[nix]
channel = "stable-24_05"

[[ports]]
localPort = 8080
externalPort = 80

[deployment]
run = ["sh", "-c", "python collector.py"]
deploymentTarget = "cloudrun"
