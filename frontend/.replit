# Replit 配置文件 - 前端可视化服务

# 运行命令
run = "uvicorn app:app --host 0.0.0.0 --port 8000"

# 语言设置
language = "python3"

# 启动命令
entrypoint = "app.py"

# Python 版本
[nix]
channel = "stable-23_11"

# 部署配置
[deployment]
run = ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]
deploymentTarget = "cloudrun"

# 环境变量（在 Replit Secrets 中配置）
# DATABASE_URL

# 说明：
# 1. 将此文件放在前端项目根目录
# 2. 在 Replit Secrets 中配置 DATABASE_URL
# 3. 部署为 Always On 服务

